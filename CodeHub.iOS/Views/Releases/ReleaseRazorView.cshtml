@model ReleaseRazorViewModel
<html><head>
<meta name="viewport" content="width=device-width; initial-scale=1.0; maximum-scale=1.0; user-scalable=0"/>
<style>
* {
box-sizing: border-box;
}
body {
color: #333;
font-family: Helvetica, Arial, sans-serif;
line-height: 1.42;
}
body {
font-size: 15px;
line-height: 1.7;
overflow: hidden;
word-wrap: break-word;
}
h1, h2, h3, h4, h5, h6 {
margin: 1em 0 15px;
padding: 0;
font-weight: bold;
line-height: 1.7;
cursor: text;
position: relative;
}
h1 {
font-size: 1.8em;
border-bottom: 1px solid #ddd;
}
.markdown-body p, .markdown-body blockquote, .markdown-body ul, .markdown-body ol, .markdown-body dl, .markdown-body table, .markdown-body pre {
margin: 15px 0;
}
.markdown-body h2 {
font-size: 1.4em;
border-bottom: 1px solid #eee;
}
.markdown-body ul, .markdown-body ol {
padding-left: 30px;
}
a {
color: #4183c4;
text-decoration: none;
text-decoration: none;
}
.markdown-body .highlight pre, .markdown-body pre {
background-color: #f8f8f8;
border: 1px solid #ddd;
font-size: 13px;
line-height: 19px;
overflow: auto;
padding: 6px 10px;
border-radius: 3px;
}
.markdown-body pre {
word-wrap: normal;
}
.markdown-body dl {
padding: 0;
}
.markdown-body dl dt {
font-size: 14px;
font-weight: bold;
font-style: italic;
padding: 0;
margin-top: 15px;
}
.markdown-body dl dd {
margin-bottom: 15px;
padding: 0 15px;
}
.markdown-body table {
width: 100%;
overflow: auto;
display: block;
}
.markdown-body table tr {
border-top: 1px solid #ccc;
background-color: #fff;
}
.markdown-body table tr:nth-child(2n) {
background-color: #f8f8f8;
}
.markdown-body table th, .markdown-body table td {
border: 1px solid #ddd;
padding: 6px 13px;
}
.markdown-body table th {
font-weight: bold;
}
.markdown-body img {
max-width: 100%;
-moz-box-sizing: border-box;
box-sizing: border-box;
}
.release-authorship {
	margin-top: 5px;
	margin-bottom: 20px;
	font-size: 14px;
	color: #999;
}
.release-authorship img.avatar {
display: inline-block;
overflow: hidden;
line-height: 1;
vertical-align: middle;
border-radius: 3px;
}
.release-authorship span {
font-weight: bold;
color: #666;
}

</style>
<title>Release</title></head>
<body>
	<h1>@Model.Name</h1>
	<p class="release-authorship">
		<img class="avatar" height="20" src="@(Model.Release.Author.AvatarUrl)" width="20">
		<span>@Model.Release.Author.Login</span>
		released this
		<time>@Model.ReleaseTime</time>
	</p>

	<div class="markdown-body">
		@Model.Body
	</div>
</body>
</html>